<%-include('../partials/header')%>
    <div class="container">
        <h1>Pessoas</h1>
        <p><a href="/pessoas/create">Nova Pessoa</a></p>
        <table class="table table-striped table-hover table-bordered">
            <tr>
                <th class="w-100">Nome</th>
                <th>Ações</th>
            </tr>
            <% pessoas.map(pessoa => {%>
                <tr>
                    <td>
                        <%=pessoa.nome%>
                    </td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Basic example">
                            <a type="button" class="btn btn-light" href="/pessoas/update/<%=pessoa.id%>">Editar</a>
                            <a type="button" class="btn btn-light" href="/pessoas/delete/<%=pessoa.id%>" onclick="return confirm('Deseja realmente excluir?')">Excluir</a>
                        </div>
                    </td>
                </tr>
                <%})%>
        </table>
    </div>
    <%-include('../partials/footer')%>